{
  "name": "sinmple-ipad-clock",
  "version": "1.0.0",
  "description": "Simple iPad clock",
  "dependencies": {
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "node-sass": "^6.0.1",
    "path": "^0.12.7",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6",
    "@types/shelljs": "^0.8.9",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.2.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all clean lint tsc copy-assets",
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run prod",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "prestart": "npm run build",
    "prod": "npm-run-all build start",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sujin2f/Simple-iPad-Clock.git"
  },
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/sujin2f/Simple-iPad-Clock",
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false
  }
}
